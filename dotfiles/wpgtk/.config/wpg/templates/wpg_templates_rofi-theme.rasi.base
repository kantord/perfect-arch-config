* {
    background-color:      Transparent;
    border-color:          White;
    text-color:           White;
    font:            "Times New Roman 12";
    transparency:	"background";
}

#window {
    anchor:     south;
    location:   south;
    width:      100%;
    padding:    0;
    x-offset:   -20px;
    children:   [ horibox ];
}

#horibox {
    orientation: horizontal;
    children:   [ entry, listview ];
}

#listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

#entry {
    expand:     false;
    width:      3em;
}

#element {
    padding: 1px 2px;
}
#element selected {
    background-color: SteelBlue;
}
